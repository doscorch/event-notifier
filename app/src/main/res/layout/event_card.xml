<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="271dp"
                android:layout_height="72dp"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Event Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/eventNotificationBtn"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#85FF8A"
                android:src="@mipmap/bell_icon_foreground"
                android:tint="#000000" />

            <ImageButton
                android:id="@+id/eventDeleteBtn"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF8181"
                android:src="@mipmap/trash_icon_foreground"
                tools:src="@mipmap/trash_icon_foreground" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>